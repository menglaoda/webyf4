<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title></title>
		<style type="text/css">
			*{
				margin: 0;
				padding: 0;
			}
			.box{
				width: 426px;
				height: 640px;
				background: url(img/iphone.jpg);
				margin: 50px auto;
				position: relative;
			}
			.range{
				position: absolute;
				left: 0px;
				top: 1px;
				transition: left 0.3s;
			}
			.box1{
				width: 370px;
				height: 64px;
				position: absolute;
				left: 28px;
				bottom: 32px;
				border-radius: 15px;
				overflow: hidden;
			}
		</style>
		<script type="text/javascript">
			document.addEventListener("DOMContentLoaded",function(){
				var box = document.querySelector(".box");
				var box1 = document.querySelector(".box1");
				var range1 = document.querySelector(".range");
				range1.onmousedown = function(e){
					var e = e||event;
					//获取鼠标距离滑块左边的距离
					var x1 = e.clientX - (box.offsetLeft+range1.offsetLeft+box1.offsetLeft);
					document.onmousemove = function(e){
						range1.style.transition = "none";
						var e = e||event;
						var x2 = e.clientX -x1-box.offsetLeft-box1.offsetLeft;
						if(x2<=0){
							range1.style.left =0 +"px";
						}else if(x2>=box1.offsetWidth-range1.offsetWidth){
							range1.style.left =box1.offsetWidth-range1.offsetWidth +"px";
							box.style.background = "url(img/iphone2.jpg)";
							box1.style.display = "none";
						}else{
							range1.style.left = x2+"px";
						}
						
					}
					document.onmouseup = function(){
						document.onmousemove =null;
						document.onmouseup = null;
						range1.style.transition = "left 0.3s";
						range1.style.left = 0+"px";
					}
				}
			})
		</script>
	</head>
	<body>
		<div class="box">
			<div class="box1">
				<img draggable="false" class="range" src="img/unlock_btn.jpg" />
			</div>
			
		</div>
	</body>
</html>
