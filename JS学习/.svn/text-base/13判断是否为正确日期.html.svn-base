<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title></title>
		<script type="text/javascript">
			//3.年月日分别为自定义函数的参数，判断某一个日期是否为正确的日期;例：fn(2020,8,25);
			function fn(y,m,d){
				if(m==1 || m==3||m==5||m==7||m==8||m==10||m==12){
					if(d>=1 && d<=31){
						console.log("这是一个正确日期")
					}else{
						console.log("这是一个错误日期")
					}
				}
				if(m==4 || m==6||m==9||m==11){
					if(d>=1 && d<=30){
						console.log("这是一个正确日期")
					}else{
						console.log("这是一个错误日期")
					}
				}
				if(m==2){
					if((y%4==0 && y%100!=0) || y%400==0){
						if(d>=1 && d<=29){
							console.log("这是一个正确日期")
						}else{
							console.log("这是一个错误日期")
						}
					}else{
						if(d>=1 && d<=28){
							console.log("这是一个正确日期")
						}else{
							console.log("这是一个错误日期")
						}
					}
				}
			}
			fn(2020,8,31);
		</script>
	</head>
	<body>
	</body>
</html>
