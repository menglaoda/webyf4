<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title></title>
		<style type="text/css">
			*{
				margin: 0;
				padding: 0;
			}
			.list{
				list-style: none;
			}
			.list li{
				height: 30px;
				background: red;
			}
			.list li:nth-child(2n){
				background: blue;
			}
		</style>
		<script type="text/javascript">
			window.onload = function(){
				var list = document.querySelector(".list");
				var oli = list.querySelectorAll("li");
				var s=0;
				setInterval(function(){
					s++;
					if(s%2==0){
						for(var i=0;i<oli.length;i++){
							if(i%2==0){
								oli[i].style.background = "red";
							}else{
								oli[i].style.background = "blue";
							}
						}
					}else{
						for(var i=0;i<oli.length;i++){
							if(i%2==0){
								oli[i].style.background = "blue";
							}else{
								oli[i].style.background = "red";
							}
						}
					}
					
				},100)
			}
		</script>
	</head>
	<body>
		<ul class="list">
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
		</ul>
	</body>
</html>
