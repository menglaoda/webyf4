<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title></title>
		<style type="text/css">
			*{
				margin: 0;
				padding: 0px;
			}
			.list{
				width:360px ;
				height: 590px;
				background: #999;
				margin: 50px auto;
			}
			.list li{
				list-style: none;
				width: 96px;
				height: 96px;
				border: solid 2px #ccc;
				background: #ccc;
				float: left;
				margin-left: 15px;
				margin-top: 15px;
				text-align: center;
				font-size: 30px;
				color: white;
				line-height: 45px;
			}
			.list li:last-child{
				width: 330px;
				line-height: 100px;
			}
			.list li:first-child{
				color: red;
				background: white;
				border: solid 2px red;
			}
		</style>
		<script type="text/javascript">
			window.onload = function(){
				var oli = document.getElementsByTagName("li");
				var obj = oli[0];
				var arr = ["一","二","三","四","五","六","七","八","九","十","十一","十二"];
				for(var i=0;i<oli.length-1;i++){
					oli[i].index = i;
					oli[i].onclick = function(){
//						for(var j=0;j<oli.length-1;j++){
//							oli[j].style.background="#ccc";
//							oli[j].style.color = "white";
//							oli[j].style.border="solid 2px #ccc";
//						}
						obj.style.background="#ccc";
						obj.style.color = "white";
						obj.style.border="solid 2px #ccc";
						
						this.style.background="white";
						this.style.color = "red";
						this.style.border="solid 2px red";
						obj=this;
						oli[oli.length-1].innerHTML = arr[this.index]+"月份好！";
					}
				}
			}
		</script>
	</head>
	<body>
		<ul class="list">
			<li>1<br/>JAN</li>
			<li>2<br/>JAN</li>
			<li>3<br/>JAN</li>
			<li>4<br/>JAN</li>
			<li>5<br/>JAN</li>
			<li>6<br/>JAN</li>
			<li>7<br/>JAN</li>
			<li>8<br/>JAN</li>
			<li>9<br/>JAN</li>
			<li>10<br/>JAN</li>
			<li>11<br/>JAN</li>
			<li>12<br/>JAN</li>
			<li>一月份好！</li>
		</ul>
	</body>
</html>
